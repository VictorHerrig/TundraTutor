<control:CustomWindow x:Class="TutorWindows.RequestTutor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:TundraControls;assembly=TundraControls"
        Title="Request To Become a Tutor" Width="345" Height="172.85">
    <Grid Margin="0,0,0,3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="121*"/>
            <ColumnDefinition Width="216*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="38"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="CourseLabel" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Course:" VerticalAlignment="Top" FontSize="16" Grid.Row="1" Height="21" Width="53"/>
        <ComboBox x:Name="CourseList" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="259" Grid.Row="1" Height="22" Grid.ColumnSpan="2"/>
        <control:TundraButton x:Name="Apply" Content="Apply" HorizontalAlignment="Left" Margin="10,17,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Grid.Column="1" Height="21" Click="Apply_Click"/>

    </Grid>
</control:CustomWindow>
